<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="8dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/bus_img"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    <TextView
            android:text="Bus No: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_bus_number"
            app:layout_constraintLeft_toRightOf="@+id/bus_img"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Niazi Express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_company_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Departure: 25 Dec 2019, 05:30 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_departure"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/label_bus_number"
            app:layout_constraintStart_toEndOf="@id/bus_img"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Ticket: "
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/label_ticket"
            app:layout_constraintTop_toTopOf="@+id/txt_ticket_price"
            app:layout_constraintEnd_toStartOf="@+id/txt_ticket_price"
    />
    <TextView
            android:text="2500 PKR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_ticket_price"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_departure"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="FDR 1378"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_bus_no"
            android:textStyle="bold"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_bus_number"
    />
    <TextView
            android:text="Travelling Hours: 12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_travelling_hours"
            app:layout_constraintTop_toBottomOf="@+id/txt_departure"
            app:layout_constraintStart_toStartOf="@+id/txt_departure"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>